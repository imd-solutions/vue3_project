{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*",
    "alias.ts"
  ],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "composite": true,
    "types": ["node"]
  }
}
